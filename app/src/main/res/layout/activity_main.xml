<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A997CD"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="253dp"
        android:layout_height="107dp"
        android:background="@color/teal_200"
        android:drawableTop="@color/teal_200"
        android:text="حساب العمر"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:text="عمرك الحالي؟؟"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.327" />

    <Button
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="خروج"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143"
        tools:layout_editor_absoluteX="-16dp"
        android:weightSum="10"
        >

        <EditText
            android:id="@+id/by"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
android:textColorHint="@color/black"


            android:background="@drawable/texwit"
            android:hint="سنه الميلاد"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/bm"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/texwit"

            android:hint="شهر الميلاد"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/bd"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/texwit"
            android:ems="10"
            android:textColorHint="@color/black"
            android:hint="يوم الميلاد"
            android:textColor="@color/black"
            android:inputType="number" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>